@model IEnumerable<ClassLibrary2.Property_img>

<h2>Property Images</h2>

@if (Model.Any())
{
    <div class="row">
        @foreach (var image in Model)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <img src="@Url.Content(image.img_path)" class="card-img-top" alt="@image.img_name" style="width:412px; height:300px;">
                    <div class="card-body">
                        <h5 class="card-title">@image.img_name</h5>
                        <p class="card-text">Property ID: @image.Pro_id</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No property images found.</p>
}
