        <script src="~/Scripts/js/jquery.validate.min.js"></script>
        <script src="~/Scripts/js/searched.js"></script>
        <script src="~/Scripts/js/dashbord-mobile-menu.js"></script>
        <script src="~/Scripts/js/forms-2.js"></script>
