                                                <li><a href="@Url.Action("Index", "Admin")" style="display: none;">Dashboard</a></li>
                                            }
                                        </ul>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Index", "auction")">Auction</a>
                                        <ul>
                                            <li>
                                                <a href="@Url.Action("Index", "auction")">Auction List</a>
