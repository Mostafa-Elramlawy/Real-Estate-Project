        <!-- Header Container / End -->
        <!-- START SECTION USER PROFILE -->
        <section class="user-page section-padding pt-5">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-3 col-md-12 col-xs-12 pl-0 pr-0 user-dash">
                        <div class="user-profile-box mb-0">
                            <div class="sidebar-header"><img src="~/Content/images/logo-blue.svg" alt="header-logo2.png"> </div>
                            <div class="header clearfix">
                                <img src="~/Content/images/Default_Image.png" alt="avatar" class="img-fluid profile-img">
                            </div>
                            <div class="active-user">
                                <h2>
                                    @if (!string.IsNullOrEmpty(userName))
                                    {
                                        <a style="padding: 10px;">@userName</a>
                                    }
                                </h2>
                            </div>
                            <div class="detail clearfix">
                                <ul class="mb-0">
                                    <li>
                                        <a href="@Url.Action("Details", "user")">
                                            <i class="fa fa-user"></i>Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="active" href="@Url.Action("MyProperties", "user")">
                                            <i class="fa fa-list" aria-hidden="true"></i>My Properties
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Create", "property")">
                                            <i class="fa fa-list" aria-hidden="true"></i>Add Property
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Logout", "user")">
                                            <img src="~/Content/images/icons8-logout-48.png" style="width: 11%;" />Log Out
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-9 col-md-12 col-xs-12 royal-add-property-area section_100 pl-0 user-dash2">
                        <div class="col-lg-12 mobile-dashbord dashbord">
                            <div class="dashboard_navigationbar dashxl">
                                <div class="dropdown">
                                    <button onclick="myFunction()" class="dropbtn"><i class="fa fa-bars pr10 mr-2"></i> Dashboard Navigation</button>
                                    <ul id="myDropdown" class="dropdown-content">
                                        <li>
                                            <a href="dashboard.html">
                                                <i class="fa fa-map-marker mr-3"></i> Dashboard
                                            </a>
                                        </li>
                                        <li>
                                            <a href="user-profile.html">
                                                <i class="fa fa-user mr-3"></i>Profile
                                            </a>
                                        </li>
                                        <li>
                                            <a href="my-listings.html">
                                                <i class="fa fa-list mr-3" aria-hidden="true"></i>My Properties
                                            </a>
                                        </li>
                                        <li>
                                            <a href="favorited-listings.html">
                                                <i class="fa fa-heart mr-3" aria-hidden="true"></i>Favorited Properties
                                            </a>
                                        </li>
                                        <li>
                                            <a class="active" href="add-property.html">
                                                <i class="fa fa-list mr-3" aria-hidden="true"></i>Add Property
                                            </a>
                                        </li>
                                        <li>
                                            <a href="payment-method.html">
                                                <i class="fas fa-credit-card mr-3"></i>Payments
                                            </a>
                                        </li>
                                        <li>
                                            <a href="invoice.html">
                                                <i class="fas fa-paste mr-3"></i>Invoices
                                            </a>
                                        </li>
                                        <li>
                                            <a href="change-password.html">
                                                <i class="fa fa-lock mr-3"></i>Change Password
                                            </a>
                                        </li>
                                        <li>
                                            <a href="index.html">
                                                <i class="fas fa-sign-out-alt mr-3"></i>Log Out
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- END SECTION USER PROFILE -->
    </div>
    <!-- Wrapper / End -->
    <div class="form-horizontal" style="padding-left: 21%; padding-right: 1%;">
        <div class="dashborad-box">
            <h4 class="title">Properties List</h4>
            <div class="section-body listing-table">
                <div class="table-responsive">
                    <table class="table table-striped table-scroll" style="max-height: 400px; overflow-y: auto;">
                        <thead>
                            <tr>
                                <th>Price</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Number of Bedrooms</th>
                                <th>Number of Bathrooms</th>
                                <th>Number of Living Rooms</th>
                                <th>Size</th>
                                <th>Garage Number</th>
                                <th>Floor Number</th>
                                <th>Building Number</th>
                                <th>Add Images!</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Price</td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>@item.NumberOfBedRooms</td>
                                    <td>@item.NumberOfBathRooms</td>
                                    <td>@item.NumOfLivingRoom</td>
                                    <td>@item.size</td>
                                    <td>@item.garage_num</td>
                                    <td>@item.Floor_Num</td>
                                    <td>@item.Building_Num</td>
                                    <td>
                                        @Html.ActionLink("Add", "MCreate", new { proId = item.Pro_id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
