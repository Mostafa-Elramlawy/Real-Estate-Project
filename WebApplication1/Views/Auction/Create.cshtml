<script>
    $(document).ready(function () {
        $('#Bid_start').change(function () {
            var bidStart = new Date($(this).val());
            var currentDate = new Date();
            if (bidStart < currentDate) {
                alert('Bid start date must be greater than or equal to the current date.');
                $(this).val('').focus();
            }
        });
        $('#Bid_End').change(function () {
            var bidStart = new Date($('#Bid_start').val());
            var bidEnd = new Date($(this).val());
            if (bidEnd <= bidStart) {
                alert('Bid end date must be greater than the bid start date.');
                $(this).val('').focus();
            }
        });
    });
</script>



